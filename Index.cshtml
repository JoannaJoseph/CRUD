<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src="~/Scripts/knockout-3.4.2.js"> </script>
<script type="text/javascript" src="~/Scripts/knockout-3.4.2.debug.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/knockout-validation/2.0.3/knockout.validation.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

<h2>Customer list</h2>

<input type="button" id="btnaddcustomer" class="btn btn-large btn-primary" value="Add Customer" data-bind="click:$root.modelbox1"/>
<hr />
<div class="panel panel-default pre-scrollable">
    <table class="table table-striped table-bordered table-responsive table-condensed table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:Customers">
            <tr>
                <td>
                    <span data-bind="text:Id"></span>
                </td>
                <td>
                    <span data-bind="text:Name"></span>
                </td>
                <td>
                    <span data-bind="text:Age"></span>
                </td>
                <td>
                    <span data-bind="text:Address"></span>
                </td>
                <td>
                    <button id ="btneditcustomer" class="btn glyphicon glyphicon-pencil" data-bind="click:$root.getSelected" />
                </td>
                <td>
                    <button class="glyphicon glyphicon-trash" data-bind="click:$root.delete" />
                </td>
            </tr>
        </tbody>
    </table>
</div>


<div id="modalbox1" databind="html: content" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1>Add New Customer</h1>
            </div>

            <div class="modal-body">
                
                 <table class="table table-condensed table-striped table-bordered">

                        <tr>
                            <td>Name:</td>
                            <td>
                                
                                <input type="text" data-bind="value:Name" class="form-control" />
                            </td>
                        </tr>
                        <tr>
                            <td>Age:</td>
                            <td>
                                
                                <input type="text" data-bind="value:Age" class="form-control" />
                            </td>
                        </tr>
                        <tr>
                            <td>Address:</td>
                            <td>
                                
                                <input type="text" data-bind="value:Address" class="form-control" />
                            </td>
                        </tr>
                        
                    </table>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
                <button class="btn btn-primary" data-bind="click:save" aria-hidden="true">Ok</button>
            </div>
        </div>
    </div>
</div>

<div id="modalbox2" class="modal" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1>Edit Customer</h1>
            </div>

            <div class="modal-body">

                <table class="table table-condensed table-striped table-bordered">

                    <tr>
                        <td>Name:</td>
                        <td>
                          
                            <input type="text" data-bind="value:Name" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>Age:</td>
                        <td>
                          
                            <input type="text" data-bind="value:Age" class="form-control" />
                        </td>
                    </tr>
                    <tr>
                        <td>Address:</td>
                        <td>
                            
                            <input type="text" data-bind="value:Address" class="form-control" />
                        </td>
                    </tr>

                </table>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
                <button class="btn btn-primary" data-bind="click:save" aria-hidden="true">Ok</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        var modelbox1 = function () {
            $("#modalbox1").modal("show");
        };
        
        $("#btnaddcustomer").on('click', modelbox1);
  
    });
</script>

<script type="text/javascript">
    $(function () {
        var modelbox2 = function () {
            $("#modalbox2").modal("show");
        };

        $("#btneditcustomer").on('click', modelbox2);

    });
</script>

<script type="text/javascript">

    $(".modal").on("hidden.bs.modal", function () {
             $(".modal-body").html("");
         });

</script>



@section Scripts {
    @Scripts.Render("~/Scripts/Viewmodel/customer.js")
}
